{
	"name": "qrbit",
	"version": "0.1.0",
	"description": "A fast QR code generator with logo embedding support",
	"main": "dist/qrbit.cjs",
	"module": "dist/qrbit.js",
	"types": "dist/qrbit.d.ts",
	"exports": {
		".": {
			"types": "./dist/qrbit.d.ts",
			"import": "./dist/qrbit.js",
			"require": "./dist/qrbit.cjs"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build:napi:release": "napi build src --platform --release --js native.js --dts native.d.ts",
		"build:release": "pnpm build:napi:release && pnpm build:ts && pnpm build:copy",
		"build:napi:debug": "napi build src --platform --js native.js --dts native.d.ts",
		"build": "pnpm build:clean && pnpm build:napi:debug && pnpm build:ts && pnpm build:copy",
		"build:ts": "tsup",
		"build:copy": "cp src/qrbit.*.node dist/ && cp src/native.* dist/",
		"build:clean": "rimraf dist && rimraf \"src/*.node\" && rimraf \"src/native.*\" && rimraf target",
		"lint": "biome check --write --error-on-warnings",
		"test": "pnpm lint && vitest run --coverage",
		"test:ci": "biome check --error-on-warnings && vitest run --coverage",
		"artifacts": "napi artifacts",
		"version": "napi version"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.2",
		"@napi-rs/cli": "^2.18.4",
		"@types/node": "^20.10.0",
		"@vitest/coverage-v8": "^1.0.0",
		"tsup": "^8.0.0",
		"typescript": "^5.3.0",
		"vitest": "^1.0.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/jaredwray/qrbit.git"
	},
	"keywords": [
		"qr",
		"qrcode",
		"generator",
		"svg",
		"png",
		"logo",
		"rust",
		"napi"
	],
	"author": "Jared Wray <me@jaredwray.com>",
	"license": "MIT",
	"napi": {
		"name": "qrbit",
		"triples": {
			"defaults": true,
			"additional": [
				"x86_64-unknown-linux-musl",
				"aarch64-unknown-linux-gnu",
				"i686-pc-windows-msvc",
				"armv7-unknown-linux-gnueabihf",
				"aarch64-apple-darwin",
				"aarch64-pc-windows-msvc",
				"aarch64-unknown-linux-musl",
				"x86_64-unknown-freebsd"
			]
		}
	},
	"dependencies": {
		"rimraf": "^6.0.1"
	}
}
